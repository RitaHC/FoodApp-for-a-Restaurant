{% layout 'layout.liquid'%}
{% block content %}
<div>
    <h2 class="display-6">Food Menu</h2>
    <div class="row">
        {% for m in menu %}
        <div style="width: 18rem;">
            <img src={{ m.img }}>
            <h5> {{m.name}} - ${{m.price}}</h5>
            
            <a href = "/cart/{{m.id}}"><button type="button" class="btn btn-danger">Add to Cart</button><a>
            {%- comment -%} <div class="card-body">
                <h5 class="card-title">
                    Ready?: {{ example.ready }}
                </h5>
                <p class="card-text">
                    Body: {{ example.body }}
                </p>
                <p class="card-text">
                    Amount: {{ example.amount }}
                </p>
                <a href="/examples/{{ example.id }}" class="btn btn-info">
                    View {{ example.title }}
                </a>
            </div> {%- endcomment -%}
        </div>
        {% endfor %}
    </div>
</div>
<script src="controllers/cartControllers.js"></script>
{% endblock %}