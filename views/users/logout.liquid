{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-md text-center">
        <h2>Are you sure you would like to log out?</h2>
        <div class="btn-group" id="logout">
            <a href="/" class="btn btn-warning me-3">No, back to home page</a>
            
            <form action="/users/logout?_method=DELETE" method="POST">
                <input type="submit" class="btn btn-danger" value="Yes, log me out">
            </form>
        </div>
    </div>
{% endblock %}